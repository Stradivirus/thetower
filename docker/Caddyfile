# Production domain with automatic HTTPS
towerreport.p-e.kr {
    handle /api/* {
        reverse_proxy backend:8000
    }

    handle {
        root * /usr/share/caddy/html
        try_files {path} /index.html
        file_server
    }
}

# Fallback for IP access
:80 {
    handle /api/* {
        reverse_proxy backend:8000
    }

    handle {
        root * /usr/share/caddy/html
        try_files {path} /index.html
        file_server
    }
}